{
  "extends": "../shared/tsconfig.libs",
  "include": ["src", "spec"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "plugins": [
      {
        "name": "typescript-strict-plugin",
        "paths": ["./src"],
        "excludePattern": ["**/*.spec.ts"]
      }
    ]
  },
  "paths": {
    "@bitwarden/common/*": ["../common/src/*"]
  }
}
