{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "schedule:monthly",
    ":maintainLockFilesMonthly",
    ":preserveSemverRanges",
    ":rebaseStalePrs",
    ":disableDependencyDashboard"
  ],
  "enabledManagers": [
    "npm"
  ],
  "separateMajorMinor": false,
  "packageRules": [
    {
        "matchManagers": ["npm"],
        "matchUpdateTypes": ["major", "minor", "patch"],
        "groupName": "npm"
    }
  ]
}
